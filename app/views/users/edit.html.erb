<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for="input-name">Name</label><br>
          <%= f.text_field :name, id: "input-name", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="input-image">Image</label><br>
          <%= f.file_field :profile_image, id: "input-image" %>
        </div>
        <div class="form-group">
          <label for="input-introduction">Introudction</label><br>
          <%= f.text_area :introduction, id: "input-introduction", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>