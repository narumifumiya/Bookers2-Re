<h2>New book</h2>

  <%= form_with model:book do |f| %>
    <div class="form-group">
      <label for="input-title">Title</label><br>
      <%= f.text_field :title, id: "input-title", class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="input-opinion">Opinion</label><br>
      <%= f.text_area :body, id: "input-opinion", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class: "btn btn-success" %>
    </div>
  <% end %>